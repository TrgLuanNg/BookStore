@model IEnumerable<BookStore.Models.GoodsReceipt>
    @{ ViewData["Title"] = "Lịch sử nhập hàng"; }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">📥 Lịch sử Nhập hàng</h2>
        <a href="/Admin/Receipt/Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>Nhập hàng mới
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Mã phiếu</th>
                        <th>Người nhập</th>
                        <th>Ngày nhập</th>
                        <th>Tổng tiền</th>
                        <th class="text-end pe-4">Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="ps-4 fw-bold">#@item.Id</td>
                        <td>@item.StaffId</td>
                        <td>@item.DateCreate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-danger fw-bold">@item.TotalPrice.ToString("#,##0") đ</td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-outline-info" onclick="alert('Tính năng xem chi tiết đang phát triển')">
                                <i class="fas fa-eye"></i> Xem
                            </button>
                        </td>
                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            Chưa có phiếu nhập hàng nào.
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

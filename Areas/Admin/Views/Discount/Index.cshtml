@model IEnumerable<BookStore.Models.Discount>
    @{ ViewData["Title"] = "Mã Giảm Giá"; }

    <div class="d-flex justify-content-between mb-4">
        <h2 class="text-primary fw-bold">🎟️ Mã Giảm Giá</h2>
        <button class="btn btn-primary" onclick="openModal('')"><i class="fas fa-plus"></i> Tạo mã mới</button>
    </div>

    <div class="card shadow border-0">
        <table class="table table-striped align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Mã Code</th>
                    <th>Giảm giá</th>
                    <th>Số lượng</th>
                    <th>Hạn dùng</th>
                    <th class="text-end pe-4">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null) {
                @foreach (var item in Model) {
                <tr id="row_@item.Code">
                    <td class="ps-4 fw-bold text-success">@item.Code</td>
                    <td>@item.Value.ToString("#,##0") đ</td>
                    <td>@item.Quantity</td>
                    <td>
                        @{
                            // Logic kiểm tra ngày hết hạn an toàn với DateTime?
                            if (item.DateEnd.HasValue && item.DateEnd.Value < DateTime.Now)
                            {
                            <span class="text-danger">Đã hết hạn (@item.DateEnd.Value.ToString("dd/MM/yyyy"))</span>
                            }
                            else if (item.DateEnd.HasValue)
                            {
                            <span>@item.DateEnd.Value.ToString("dd/MM/yyyy")</span>
                            }
                            else
                            {
                            <span class="text-success">Vô thời hạn</span>
                            }
                        }
                    </td>
                    <td class="text-end pe-4">
                        <button class="btn btn-sm btn-outline-primary" onclick="openModal('@item.Code')">Sửa</button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteItem('@item.Code')">Xóa</button>
                    </td>
                </tr>
                }
             }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="discountModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Mã giảm giá</h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Mã Code</label>
                        <input type="text" id="d_code" class="form-control text-uppercase">
                        <input type="hidden" id="is_edit" value="0">
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3"><label>Giá trị giảm</label><input type="number" id="d_value" class="form-control"></div>
                        <div class="col-6 mb-3"><label>Số lượng</label><input type="number" id="d_qty" class="form-control"></div>
                    </div>
                    <div class="mb-3"><label>Ngày hết hạn</label><input type="date" id="d_date" class="form-control"></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" onclick="saveDiscount()">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        var modalDisc;
        document.addEventListener("DOMContentLoaded", () => modalDisc = new bootstrap.Modal(document.getElementById('discountModal')));

        function openModal(code) {
            if (!code) {
                // Thêm mới
                $('#d_code').val('').prop('readonly', false);
                $('#d_value').val('');
                $('#d_qty').val('');
                $('#d_date').val('');
                $('#is_edit').val('0');
            } else {
                // Sửa (Cần lấy thông tin chi tiết, tạm thời gán cứng để demo)
                // Bạn có thể bổ sung API GetById ở Controller để lấy dữ liệu thực
                $('#d_code').val(code).prop('readonly', true);
                $('#is_edit').val('1');
            }
            modalDisc.show();
        }

        function saveDiscount() {
            let url = $('#is_edit').val() == '0' ? '/Admin/Discount/Create' : '/Admin/Discount/Edit';
            let data = {
                Code: $('#d_code').val(),
                Value: $('#d_value').val(),
                Quantity: $('#d_qty').val(),
                DateEnd: $('#d_date').val() ? $('#d_date').val() : null // Cho phép null
            };
            $.post(url, data, function (res) { if (res.success) location.reload(); else alert(res.message); });
        }

        function deleteItem(code) {
            if (confirm('Xóa mã này?')) {
                $.post('/Admin/Discount/Delete', { code: code }, function (res) {
                    if (res.success) location.reload(); else alert(res.message);
                });
            }
        }
    </script>

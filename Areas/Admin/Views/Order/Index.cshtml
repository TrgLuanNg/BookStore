@model IEnumerable<BookStore.Models.OrderViewModel>
    @{ ViewData["Title"] = "Quản lý Đơn hàng"; }

    <h2 class="text-primary fw-bold mb-4">📦 Quản lý Đơn hàng</h2>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any()) {
                    @foreach (var item in Model) {
                    <tr id="order_@item.Id">
                        <td class="fw-bold">#@item.Id</td>
                        <td>
                            <div class="fw-bold">@item.FullName</div>
                            <small class="text-muted">@item.Phone</small>
                        </td>
                        <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-danger fw-bold">@item.TotalAmount.ToString("#,##0") đ</td>
                        <td id="status_@item.Id">
                            @if(item.Status == 1) { <span class="badge bg-warning text-dark">Chờ duyệt</span> }
                                else if(item.Status == 2) { <span class="badge bg-success">Đã duyệt</span> }
                                else { <span class="badge bg-danger">Đã hủy</span> }
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-info text-white" onclick="viewDetails(@item.Id)">Xem CT</button>

                            @if(item.Status == 1)
                                {
                            <button class="btn btn-sm btn-success ms-1" onclick="approveOrder(@item.Id)">Duyệt</button>
                            <button class="btn btn-sm btn-danger ms-1" onclick="cancelOrder(@item.Id)">Hủy</button>
                                }
                        </td>
                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function approveOrder(id) {
            if (confirm("Duyệt đơn hàng và trừ kho?")) {
                $.post('/Admin/Order/Approve', { id: id }, function (res) {
                    if (res.success) location.reload(); else alert("Lỗi: " + res.message);
                });
            }
        }
        function cancelOrder(id) {
            if (confirm("Hủy đơn hàng này?")) {
                $.post('/Admin/Order/Cancel', { id: id }, function (res) {
                    if (res.success) location.reload();
                });
            }
        }
        function viewDetails(id) {
            // Logic hiển thị modal chi tiết (gọi API GetDetails)
            $.get('/Admin/Order/GetDetails?id=' + id, function (res) {
                let html = "<ul>";
                res.forEach(item => {
                    html += `<li>${item.name} - SL: ${item.quantity} - Giá: ${item.price}</li>`;
                });
                html += "</ul>";
                alert("Chi tiết đơn hàng:\n" + JSON.stringify(res, null, 2)); // Tạm thời alert
            });
        }
    </script>

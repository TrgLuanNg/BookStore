@model IEnumerable<BookStore.Models.Category>
    @{
    ViewData["Title"] = "Quản lý Thể loại";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">📂 Quản lý Thể loại</h2>
        <button class="btn btn-success shadow-sm" onclick="openModal(0, '')">
            <i class="fas fa-plus-circle me-2"></i>Thêm thể loại
        </button>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Tên thể loại</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                    <tr id="row_@item.Id">
                        <td class="ps-4 fw-bold">#@item.Id</td>
                        <td class="fw-bold text-dark" id="name_@item.Id">@item.Name</td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-outline-primary me-1"
                                    onclick="openModal(@item.Id, '@item.Name')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteCategory(@item.Id)">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center py-4 text-muted">Chưa có dữ liệu</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="categoryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalTitle">Thêm thể loại</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="c_id" value="0">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên thể loại</label>
                        <input type="text" id="c_name" class="form-control" placeholder="Nhập tên thể loại...">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="submitCategory()">Lưu dữ liệu</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        var myModal;
        // Khởi tạo Modal khi trang load xong
        document.addEventListener("DOMContentLoaded", function () {
            var modalEl = document.getElementById('categoryModal');
            if (modalEl) myModal = new bootstrap.Modal(modalEl);
        });

        // Hàm mở modal (Dùng chung cho cả Thêm và Sửa)
        function openModal(id, name) {
            $('#c_id').val(id);
            $('#c_name').val(name);

            if (id === 0) {
                $('#modalTitle').text("Thêm thể loại mới");
            } else {
                $('#modalTitle').text("Cập nhật thể loại");
            }
            myModal.show();
        }

        // Hàm submit (Tự động định tuyến Create hoặc Edit dựa vào ID)
        function submitCategory() {
            var id = parseInt($('#c_id').val());
            var name = $('#c_name').val();

            if (!name.trim()) { alert("Vui lòng nhập tên!"); return; }

            var url = id === 0 ? '/Admin/Category/Create' : '/Admin/Category/Edit';
            var data = { Id: id, Name: name };

            $.post(url, data, function (res) {
                if (res.success) {
                    location.reload(); // Load lại trang để cập nhật bảng
                } else {
                    alert("Lỗi: " + res.message);
                }
            }).fail(function () {
                alert("Lỗi kết nối server!");
            });
        }

        // Hàm xóa
        function deleteCategory(id) {
            if (confirm("Bạn có chắc muốn xóa thể loại này?")) {
                $.post('/Admin/Category/Delete', { id: id }, function (res) {
                    if (res.success) {
                        $('#row_' + id).remove();
                    } else {
                        alert("Không thể xóa: " + (res.message || "Lỗi hệ thống"));
                    }
                });
            }
        }
    </script>
